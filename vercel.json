{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "VERCEL": "1",
    "FLASK_ENV": "production",
    "FLASK_APP": "app.py",
    "DATABASE_URL": "sqlite:////tmp/covenant.db"
  }
}
